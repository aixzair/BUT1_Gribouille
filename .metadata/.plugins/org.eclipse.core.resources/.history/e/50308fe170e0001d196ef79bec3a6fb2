package iut.gon.tp3;

import javafx.beans.property.SimpleStringProperty;

public class GrilleModel {
	private SimpleStringProperty[][] grilleTab;
	
	public GrilleModel() {
		grilleTab = new SimpleStringProperty[3][3];
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				grilleTab[i][j] = new SimpleStringProperty();
				grilleTab[i][j].setValue(String.format("L%dC%d", i, j));
			}
		}
	}
	
	public SimpleStringProperty getCase(int lg, int col) {
		return grilleTab[lg][col];
	}
	
	public void setCase(int lg, int col, String texte) {
		grilleTab[lg][col].setValue(texte);
	}
}