<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar fx:id="menus" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iut.gon.controleurs.ControleurMenus">
  <menus>
    <Menu mnemonicParsing="false" text="Dessin">
      <items>
            <MenuItem mnemonicParsing="false" text="Charger" />
        <MenuItem mnemonicParsing="false" text="Sauvegarder" />
            <MenuItem mnemonicParsing="false" text="Exporter" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#onQuitte" text="Quitter" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Outils">
      <items>
            <Menu mnemonicParsing="false" text="Épaisseur">
               <items>
                  <RadioMenuItem userData="1" mnemonicParsing="false" text="1">
                     <toggleGroup>
                        <ToggleGroup fx:id="groupe_epaisseur" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem userData="2" mnemonicParsing="false" text="2" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="3" mnemonicParsing="false" text="3" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="4" mnemonicParsing="false" text="4" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="5" mnemonicParsing="false" text="5" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="6" mnemonicParsing="false" text="6" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="7" mnemonicParsing="false" text="7" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="8" mnemonicParsing="false" text="8" toggleGroup="$groupe_epaisseur" />
                  <RadioMenuItem userData="9" mnemonicParsing="false" text="9" toggleGroup="$groupe_epaisseur" />
               </items>
            </Menu>
            <RadioMenuItem fx:id="crayon" mnemonicParsing="false" selected="true" text="Crayon">
               <toggleGroup>
                  <ToggleGroup fx:id="outils" />
               </toggleGroup>
            </RadioMenuItem>
            <RadioMenuItem fx:id="etoile" mnemonicParsing="false" text="Étoile" toggleGroup="$outils" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Aide">
      <items>
        <MenuItem mnemonicParsing="false" text="À propos" />
      </items>
    </Menu>
  </menus>
</MenuBar>
